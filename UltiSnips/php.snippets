snippet wpquery "wp wp_query" i
<?php
$args = array(
	'${1:index}' => '${2:value}'
);
$q = new WP_Query($args);
global $post;
while ($q->have_posts()) : $q->the_post(); ?>
	${3}
<?php endwhile; wp_reset_query(); ?>
endsnippet

snippet postthumbsrc "wp get post thumbnail src" i
